#!/bin/bash

# Simple deployment command
# Usage: deploy [project-name]

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Load environment variables
if [ -f .env ]; then
    export $(cat .env | grep -v '^#' | xargs)
fi

# Get project name from argument or use current directory name
if [ -z "$1" ]; then
    PROJECT_NAME=$(basename "$PWD")
else
    PROJECT_NAME="$1"
fi

echo -e "${BLUE}üöÄ Deploying to: ${PROJECT_NAME}.pages.dev${NC}"
echo ""

# Deploy
npx wrangler pages deploy . --project-name="$PROJECT_NAME"

if [ $? -eq 0 ]; then
    echo ""
    echo -e "${GREEN}‚úÖ Deployed successfully!${NC}"
    echo -e "${GREEN}üåê Your app: https://${PROJECT_NAME}.pages.dev${NC}"
    
    if [ -n "$CUSTOM_DOMAIN" ]; then
        echo -e "${GREEN}üåê Custom domain: https://${CUSTOM_DOMAIN}${NC}"
    fi
fi
